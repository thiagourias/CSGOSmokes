<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btn64"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="360dp"
        android:background="@color/OrangeDefault"
        android:onClick="abrirTick64"
        android:text="@string/btn_64"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="239dp" />

    <Button
        android:id="@+id/btn128"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="189dp"
        android:layout_marginLeft="189dp"
        android:layout_marginTop="360dp"
        android:background="@color/OrangeDefault"
        android:onClick="abrirTick128"
        android:text="@string/btn_128"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="239dp" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        tools:layout_editor_absoluteY="511dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="57dp"
        android:background="@color/DCDCDC"
        android:onClick="paginatick"
        android:text="@string/label_tick"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/button2"
        android:layout_width="191dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="60dp"
        android:onClick="doacoes"
        android:text="@string/label_donate" />

    <Button
        android:id="@+id/button4"
        android:layout_width="192dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/btn64"
        android:layout_alignRight="@+id/btn64"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-198dp"
        android:layout_marginRight="-198dp"
        android:layout_marginBottom="9dp"
        android:onClick="creditos"
        android:text="@string/label_creditos" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:contentDescription="TODO"
        app:srcCompat="@mipmap/logo" />

</RelativeLayout>